<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/header"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:background="@color/title_background"
                android:orientation="horizontal">
    <ImageView
            android:id="@+id/infoBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:src="@drawable/logo"/>
    <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/myTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="12px"
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/infoBt"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:shadowColor="#FF000000"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="0.7"
            android:text="@string/app_name" />
    <LinearLayout android:layout_width="70dp"
                  android:layout_height="match_parent"
                  android:layout_alignParentRight="true"
            android:gravity="center_vertical|right">
        <ImageView
                android:id="@+id/action_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/sharebar"/>
        <ImageView
                android:id="@+id/sharebar"
                android:src="@drawable/share_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:paddingRight="3dp"
                />
    </LinearLayout>
    <LinearLayout android:layout_height="1dp" android:layout_width="match_parent" android:layout_alignParentBottom="true" android:background="@color/white"/>
</RelativeLayout>

